                    <Anchors>
                        <Anchor point="TOP">
                            <Offset x="0" y="-10"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-3" y="-3"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Slider name="$parentScaleSlider" inherits="OptionsSliderTemplate">
                <Size x="160" y="16"/>
                <Anchors>
					<Anchor point="TOP">
						<Offset x="0" y="-50"/>
					</Anchor>
				</Anchors>
                <Scripts>
                    <OnLoad>
                        getglobal(this:GetName().."Text"):SetText("Scale (0.85)")
                        getglobal(this:GetName().."Low"):SetText("0.5")
                        getglobal(this:GetName().."High"):SetText("1.5")
                        this:SetMinMaxValues(0.5, 1.5)
                        this:SetValueStep(0.01)
                    </OnLoad>
                    <OnValueChanged>
                        local scale = format("%.2f", this:GetValue())
                        RINSE_CONFIG.SCALE = tonumber(scale)
                        RinseFrame:SetScale(scale)
                        getglobal(this:GetName().."Text"):SetText("Scale ("..scale..")")
                    </OnValueChanged>
                </Scripts>
            </Slider>
            <Slider name="$parentOpacitySlider" inherits="OptionsSliderTemplate">
                <Size x="160" y="16"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentScaleSlider" relativePoint="BOTTOMLEFT">
                        <Offset x="0" y="-16"/>
                    </Anchor>
				</Anchors>
                <Scripts>
                    <OnLoad>
                        getglobal(this:GetName().."Text"):SetText("Opacity (1.00)")
                        getglobal(this:GetName().."Low"):SetText("0.3")
                        getglobal(this:GetName().."High"):SetText("1")
                        this:SetMinMaxValues(0.3, 1)
                        this:SetValueStep(0.01)
                    </OnLoad>
                    <OnValueChanged>
                        local alpha = format("%.2f", this:GetValue())
                        RINSE_CONFIG.OPACITY = tonumber(alpha)
                        RinseFrame:SetAlpha(alpha)
                        getglobal(this:GetName().."Text"):SetText("Opacity ("..alpha..")")
                    </OnValueChanged>
                </Scripts>
            </Slider>
            <CheckButton name="$parentWyvernSting" inherits="OptionsCheckButtonTemplate">
